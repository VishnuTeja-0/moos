<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:moos.ViewModels"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
             x:Class="moos.Views.AlertBox"
             x:DataType="vm:MainWindowViewModel">

  <DockPanel Width="300" Height="200">
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" 
                Spacing="5" Margin="5">
      <Button Content="Cancel" Command="{Binding SetDialogResultCommand}" IsVisible="{Binding IsConfirmationAlert}">
        <Button.CommandParameter>
          <system:Boolean>False</system:Boolean>
        </Button.CommandParameter>
      </Button>
      <Button Content="OK" Background="DarkCyan" Command="{Binding SetDialogResultCommand}">
        <Button.CommandParameter>
          <system:Boolean>True</system:Boolean>
        </Button.CommandParameter>
      </Button>
    </StackPanel>
    <StackPanel DockPanel.Dock="Top" Margin="0">
      <StackPanel Orientation="Horizontal" Margin="10">
        <PathIcon Data="{StaticResource error_circle_regular}" IsVisible="{Binding !IsConfirmationAlert}" Foreground="IndianRed"/>
        <PathIcon Data="{StaticResource question_circle_regular}" IsVisible="{Binding IsConfirmationAlert}" Foreground="Cyan"/>
        <TextBlock Text="{Binding AlertHeader}" FontSize="18" Padding="5 0"/>
      </StackPanel>
      <Separator />
    </StackPanel>
    <TextBlock Text="{Binding AlertMessage}" TextWrapping="Wrap" Padding="10" FontSize="16" />
  </DockPanel>
  
</UserControl>
